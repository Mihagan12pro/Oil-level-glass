<kompas:KompasWindow x:Class="Oil_level_glass_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oil_level_glass_UI"
        xmlns:svg="http://www.w3.org/2000/svg"
        xmlns:kompas="clr-namespace:KompasWPF;assembly=KompasWPF"
        xmlns:window="clr-namespace:Oil_level_glass_UI"
        xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="МАСТЕР СМОТРОВЫХ ЛЮЧКОВ" MinHeight="450" MinWidth="450" Height="450" Width="620" Style="{DynamicResource KompasWindowStyle}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
        </Grid.RowDefinitions>

        <Border BorderBrush="Gray" Grid.Row="0" BorderThickness="1">
            <Image   Source="/Images/Oil level glass.png" Stretch="Fill"></Image>
        </Border>

        <Grid Grid.Row="1">
            <Button Style="{DynamicResource HelpButton}" Width="20" Height="20" Margin="0 5" VerticalAlignment="Bottom" HorizontalAlignment="Left"></Button>

            <Button Style="{DynamicResource FormButton}" Content = "3D модели" Width="80" Height="20" Margin="0 5" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Button>
        </Grid>
    </Grid>
</kompas:KompasWindow>