<kompas:KompasWindow x:Class="Oil_level_glass_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:kompas="clr-namespace:KompasWPF;assembly=KompasWPF"
        mc:Ignorable="d"
        Title="МАСТЕР СМОТРОВЫХ ЛЮЧКОВ" MinHeight="450" MinWidth="450" Height="450" Width="620" Style="{DynamicResource KompasWindowStyle}" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
        </Grid.RowDefinitions>

        <Border BorderBrush="Gray" Grid.Row="0" BorderThickness="1">
            <Image   Source="/Images/Oil level glass.png" Stretch="Fill"></Image>
        </Border>

        <Grid Grid.Row="1">
            <DockPanel>
                <Button 
                    Name="BtHelp"
                    Style="{StaticResource HelpButton}"
                    Width="20"
                    Height="20"
                    Margin="0 5" 
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left" DockPanel.Dock="Left">
                </Button>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                    <Button
                         Name="BtAbout"
                         Style="{StaticResource FormButton}" 
                         Content = "О программе" 
                         Width="90" 
                         Height="20" 
                         Margin="10 5"
                         VerticalAlignment="Bottom" 
                         HorizontalAlignment="Right" Click="BtAbout_Click">
                    </Button>

                    <Button 
                        Name="BtWizard3d"
                        Style="{StaticResource FormButton}" 
                        Content = "Мастер модели" 
                        Width="90" 
                        Height="20" 
                        Margin="0 5"
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Right">
                    </Button>
                </StackPanel>
            </DockPanel>
        </Grid>
    </Grid>
</kompas:KompasWindow>