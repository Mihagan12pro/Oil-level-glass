<UserControl x:Class="KompasWPF.CustomControls.ScalingSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KompasWPF.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             Name="scaleSlider">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="100">
            <Label  HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Padding="0" Width="35" Name="lblScaleDisplayer"></Label>
            <Button Style="{StaticResource RoundButton}" Margin="3 0 5 0" Name="btMinimize" Click="btMinimize_Click" Content="-"></Button>
            <Slider Style="{StaticResource ScalingSliderStyle}" Value="{Binding ElementName=scaleSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}" Width="80" Height="19" Minimum="0" Maximum="100" Name="slrScaler" ValueChanged="slrScaler_ValueChanged"/>
            <Button Style="{StaticResource RoundButton}" Margin="5 0" Name="btMaximize" Click="btMaximize_Click" Content="+"></Button>
        </StackPanel>
    </Grid>
</UserControl>
