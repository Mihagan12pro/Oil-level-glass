<UserControl x:Class="KompasWPF.CustomControls.ScalingSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KompasWPF.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label></Label>
            <Button Style="{StaticResource RoundButton}">-</Button>
            <Slider Style="{StaticResource ScalingSliderStyle}" Width="80" HorizontalAlignment="Center"></Slider>
            <Button Style="{StaticResource RoundButton}">+</Button>
        </StackPanel>
    </Grid>
</UserControl>
