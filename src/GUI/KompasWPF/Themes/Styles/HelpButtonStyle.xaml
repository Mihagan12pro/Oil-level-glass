<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
                    xmlns:local="clr-namespace:KompasWPF">

        <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="/KompasWPF;component/Themes/Styles/RootButtonStyle.xaml"></ResourceDictionary>
            <ResourceDictionary Source="/KompasWPF;component/Themes/Styles/KompasTootTipStyle.xaml"></ResourceDictionary>
        </ResourceDictionary.MergedDictionaries>

    
    <Style x:Key="HelpButton" TargetType="Button" x:Shared="False"  BasedOn="{StaticResource RootButtons}">
        <Setter Property="Content">
            <Setter.Value>
                <icons:Material Kind="HelpCircle"></icons:Material>
            </Setter.Value>
        </Setter>
        <Setter Property="ToolTip">
            <Setter.Value>
                <ToolTip Style="{StaticResource KompasToolTip}" Content="Справка"></ToolTip>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#e4e4e4"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>